{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["app/*"],
      "@types": ["types"],
      "@types/*": ["types/*"],
      "@components/*": ["app/components/*"],
      "@config/*": ["app/config/*"],
      "@styles/*": ["app/assets/styles/*"],
      "@utils/*": ["app/utils/*"],
      "@lib/*": ["app/lib/*"]
    },
    "typeRoots": ["./types"]
  },
  "include": ["app/**/*", "types/**/*"]
}
