{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@/*": ["app/*"],
      "@types": ["types"],
      "@types/*": ["types/*"],
      "@components/*": ["app/components/*"],
      "@config/*": ["app/config/*"],
      "@content/*": ["app/content/*"],
      "@data/*": ["app/data_files/*"],
      "@images/*": ["app/images/*"],
      "@scripts/*": ["app/assets/scripts/*"],
      "@styles/*": ["app/assets/styles/*"],
      "@utils/*": ["app/utils/*"],
      "@layouts/*": ["app/layouts/*"],
      "@root/*": ["/*"]
    },
    "typeRoots": ["./types"]
  },
  "include": ["app/**/*", "types/**/*"]
}
