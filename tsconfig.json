{
  "compilerOptions": {
    // Bun-optimized settings
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "bundler",
    "types": ["bun-types"],

    // Allow JavaScript files to be compiled (for config files)
    "allowJs": true,
    "checkJs": true,

    // Emit settings - we don't need to emit since Bun runs TS natively
    "noEmit": true,
    "isolatedModules": true,

    // Path mapping
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@data/*": ["./src/data/*"],
      "@handlers/*": ["./src/handlers/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@schemas/*": ["./src/database/schemas/*"],
      "@src/*": ["./src/*"],
      "@structures/*": ["./src/structures/*"],
      "@commands/*": ["./src/commands/*"],
      "@types/*": ["./types/*"]
    },

    // Strict type checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // Additional helpful checks
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // Allow CommonJS interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,

    // Source map for debugging
    "sourceMap": true,
    "inlineSources": true,

    // Experimental decorators (useful for Discord.js)
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "dist", "build", "logs"]
}
