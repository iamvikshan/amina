# Skip Husky hooks in CI or when HUSKY is disabled
if [ "$CI" = "true" ] || [ "$HUSKY" = "0" ]; then
  echo "Husky hook skipped in CI or HUSKY=0"
  exit 0
fi

# Run project checks (Linting & Type Checking)
echo "Running pre-commit checks..."
bun run check

