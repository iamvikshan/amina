---
export const prerender = false;

// Set cache headers for user-specific content
Astro.response.headers.set(
  'Cache-Control',
  'private, no-cache, must-revalidate'
);

// Import layout and navigation
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/navigation/Header.astro';
import DashboardFooter from '@components/navigation/DashboardFooter.astro';

// Import dashboard components
import ServerCard from '@/components/ui/dashboard/ServerCard.astro';
import AminaPortrait from '@/components/ui/character/AminaPortrait.astro';
import SpeechBubble from '@/components/ui/character/SpeechBubble.astro';
import GuardianBadge from '@/components/ui/character/GuardianBadge.astro';
import AchievementBadge from '@/components/ui/character/AchievementBadge.astro';
import { Plus } from 'lucide-react';
import {
  getDiscordUserData,
  getConfiguredGuilds,
  getDiscordGuilds,
  getAvatarUrl,
  getInitials,
} from '@/lib/data-utils';
import type { IGuild, DiscordUser, DiscordGuild } from '@types';
import {
  getGuardianRank,
  getRankProgress,
  getAminaDialogue,
  getTimeBasedGreeting,
} from '@/lib/guardian-ranks';
import { checkAchievements } from '@/lib/achievements';

let userData: DiscordUser | null = null;
let discordGuilds: DiscordGuild[] = [];
let configuredGuilds: IGuild[] = [];
let error: { message: string; code?: string } | null = null;
let loading = true;

try {
  // Fetch user data and guilds in parallel for better performance
  const [userDataResponse, discordGuildsResponse, configuredGuildsResponse] =
    await Promise.all([
      getDiscordUserData(Astro.cookies),
      getDiscordGuilds(Astro.cookies),
      getConfiguredGuilds(Astro.cookies),
    ]);

  userData = userDataResponse;
  discordGuilds = discordGuildsResponse;
  configuredGuilds = configuredGuildsResponse;
} catch (err) {
  console.error('Error fetching dashboard data:', err);
  error = {
    message:
      err instanceof Error ? err.message : 'An unexpected error occurred',
    code:
      err instanceof Error && 'code' in err
        ? (err as { code?: string }).code
        : 'UNKNOWN_ERROR',
  };
} finally {
  loading = false;
}

// Create a Set of configured guild IDs for efficient lookup
// Only include guilds where the bot is currently present (leftAt is null/undefined)
const configuredGuildIds = new Set(
  configuredGuilds
    .filter((guild) => !guild.server.leftAt)
    .map((guild) => guild._id)
);

// Filter guilds to only those where user has ADMINISTRATOR permission (0x8)
// This prevents counting guilds where user is just a member
const managedGuilds = discordGuilds.filter((guild) => {
  const permissions = BigInt(guild.permissions);
  return (permissions & 0x8n) === 0x8n; // ADMINISTRATOR permission
});

// Calculate Guardian Rank and Achievements based on MANAGED guilds only
const serverCount = managedGuilds.length;
const configuredCount = configuredGuilds.filter((g) => !g.server.leftAt).length;
const guardianRank = getGuardianRank(serverCount);
const rankProgress = getRankProgress(serverCount);
const amimaDialogue = getAminaDialogue(serverCount);
const timeGreeting = getTimeBasedGreeting();
const achievements = checkAchievements(serverCount, configuredCount, userData);
---

<Layout
  title={userData ? `Welcome | ${userData.global_name}` : 'Dashboard'}
  meta="Manage your Discord servers and bot settings"
>
  <!-- Global navigation and content -->
  <div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8">
    <Header userData={userData} discordGuilds={discordGuilds} />

    <!-- Dashboard content -->
    <main class="py-8">
      {/* Loading State */}
      {
        loading && (
          <div class="container mx-auto px-4 py-8 animate-fade-in">
            <div class="mb-8 flex items-center gap-4">
              <div class="w-16 h-16 rounded-full bg-gray-200 dark:bg-gray-700 animate-pulse" />
              <div class="flex-1">
                <div class="h-6 w-48 bg-gray-200 dark:bg-gray-700 rounded animate-pulse mb-2" />
                <div class="h-4 w-64 bg-gray-200 dark:bg-gray-700 rounded animate-pulse" />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {[...Array(6)].map(() => (
                <div class="bg-white dark:bg-slate-900 rounded-lg shadow-sm p-4">
                  <div class="flex items-center gap-4 mb-4">
                    <div class="w-16 h-16 rounded-full bg-gray-200 dark:bg-gray-700 animate-pulse" />
                    <div class="flex-1">
                      <div class="h-5 w-32 bg-gray-200 dark:bg-gray-700 rounded animate-pulse mb-2" />
                      <div class="h-4 w-24 bg-gray-200 dark:bg-gray-700 rounded animate-pulse" />
                    </div>
                  </div>
                  <div class="h-10 bg-gray-200 dark:bg-gray-700 rounded animate-pulse" />
                </div>
              ))}
            </div>
          </div>
        )
      }

      {/* Error State - Amina's Recovery */}
      {
        error && (
          <div class="min-h-[80vh] flex items-center justify-center px-4 animate-fadeIn">
            <div class="bg-night-shadow border-2 border-amina-blood-red rounded-xl p-6 max-w-lg w-full shadow-lg">
              <div class="mb-4 text-center">
                <span class="text-5xl font-bold text-amina-blood-red">(!)</span>
              </div>
              <h2 class="text-amina-crimson dark:text-amina-rose-red text-lg font-bold font-heading text-center mb-2">
                {error.code === 'AUTH_ERROR'
                  ? 'Guardian Access Required'
                  : 'Hit a Snag!'}
              </h2>
              <p class="text-gray-300 text-center mb-4 text-dialogue">
                {error.code === 'AUTH_ERROR'
                  ? "Let's get you authenticated so we can protect your realms together."
                  : "Don't worry—I've handled worse. Let's try that again, yeah? (>_<)"}
              </p>
              <p class="text-sm text-gray-400 text-center mb-6">
                {error.message}
              </p>
              <div class="mt-4 flex gap-4 justify-center">
                {error.code === 'AUTH_ERROR' ? (
                  <a href="/auth/login" class="btn-primary">
                    Authenticate
                  </a>
                ) : (
                  <button
                    onclick="window.location.reload()"
                    class="btn-secondary"
                  >
                    : ( Try Again
                  </button>
                )}
              </div>
            </div>
          </div>
        )
      }

      {/* Success State - Display Servers */}
      {
        !loading && !error && (
          <div class="container mx-auto px-4 py-8 animate-fadeIn">
            {/* User Welcome Section with Amina Character */}
            {userData && (
              <div class="mb-8">
                {/* Main Welcome Card */}
                <div class="card-amina p-6 mb-6">
                  <div class="flex items-start gap-6">
                    {/* Amina Portrait */}
                    <div class="flex-shrink-0">
                      <AminaPortrait size="lg" expression="idle" />
                    </div>

                    {/* Welcome Content */}
                    <div class="flex-1">
                      <div class="flex items-start justify-between mb-4">
                        <div>
                          <h1 class="text-2xl font-bold font-heading text-gray-900 dark:text-white mb-1">
                            {timeGreeting}
                          </h1>
                          <p class="text-lg text-gray-600 dark:text-gray-400">
                            Welcome back,{' '}
                            <span class="text-amina-crimson font-semibold">
                              {userData.global_name}
                            </span>
                            !
                          </p>
                        </div>

                        {/* User Avatar */}
                        {userData.avatar ? (
                          <img
                            src={getAvatarUrl(userData)}
                            alt={userData.username}
                            loading="lazy"
                            class="w-12 h-12 rounded-full ring-2 ring-night-steel"
                          />
                        ) : (
                          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-cyber-blue to-discord-blurple flex items-center justify-center text-white text-sm font-medium">
                            {getInitials(userData.username)}
                          </div>
                        )}
                      </div>

                      {/* Guardian Rank Display */}
                      <div class="mb-4">
                        <GuardianBadge
                          rank={guardianRank}
                          showProgress={true}
                          progress={rankProgress}
                        />
                      </div>

                      {/* Stats Row */}
                      <div class="grid grid-cols-3 gap-4 text-center">
                        <div class="bg-night-shadow/50 rounded-lg p-3">
                          <div class="text-2xl font-bold text-cyber-blue">
                            {serverCount}
                          </div>
                          <div class="text-xs text-gray-400">Total Realms</div>
                        </div>
                        <div class="bg-night-shadow/50 rounded-lg p-3">
                          <div class="text-2xl font-bold text-discord-green">
                            {configuredCount}
                          </div>
                          <div class="text-xs text-gray-400">Configured</div>
                        </div>
                        <div class="bg-night-shadow/50 rounded-lg p-3">
                          <div class="text-2xl font-bold text-imperial-gold">
                            {achievements.length}
                          </div>
                          <div class="text-xs text-gray-400">Achievements</div>
                        </div>
                      </div>
                    </div>
                  </div>

                  {/* Amina's Dialogue */}
                  <div class="mt-4 flex justify-start">
                    <SpeechBubble
                      message={amimaDialogue}
                      position="top"
                      mood="determined"
                    />
                  </div>
                </div>

                {/* Recent Achievements */}
                {achievements.length > 0 && (
                  <div class="mb-6">
                    <h2 class="text-lg font-heading font-bold text-gray-900 dark:text-white mb-3">
                      [*] Recent Achievements
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                      {achievements
                        .slice(-4)
                        .reverse()
                        .map((achievement) => (
                          <AchievementBadge
                            achievement={achievement}
                            size="sm"
                            showDescription={true}
                          />
                        ))}
                    </div>
                  </div>
                )}
              </div>
            )}

            {/* Servers Grid */}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {managedGuilds.map((guild) => (
                <ServerCard
                  guild={guild}
                  isConfigured={configuredGuildIds.has(guild.id)}
                />
              ))}
            </div>

            {/* Empty State - Amina's Encouragement */}
            {managedGuilds.length === 0 && (
              <div class="card-amina p-8 md:p-12 text-center">
                <div class="max-w-md mx-auto">
                  {/* Amina Portrait */}
                  <div class="mb-6 flex justify-center">
                    <AminaPortrait size="lg" expression="idle" />
                  </div>

                  {/* Character Message */}
                  <h2 class="text-2xl font-heading font-bold text-gray-900 dark:text-white mb-3">
                    [>] No Realms to Guard... Yet
                  </h2>
                  <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
                    I'm Amina, and I'll be your companion in protecting your
                    Discord servers. Right now, you don't have administrator
                    access to any servers, but that's okay!
                  </p>

                  {/* Amina's Dialogue */}
                  <div class="mb-6">
                    <SpeechBubble
                      message="Create your first server or get admin access to an existing one, and I'll help you build something amazing. Your Night Guard Protocol awaits! (•̀ᴗ•́)و"
                      position="top"
                      mood="happy"
                    />
                  </div>

                  {/* Action Buttons */}
                  <div class="flex flex-col sm:flex-row gap-3 justify-center">
                    <a
                      href="https://discord.com/channels/@me"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="btn-primary inline-flex items-center justify-center"
                    >
                      <Plus className="h-4 w-4 mr-2" />
                      Create Server
                    </a>
                    <a
                      href="https://support.discord.com/hc/en-us/articles/206029707-Setting-Up-Permissions"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="btn-secondary inline-flex items-center justify-center"
                    >
                      Learn About Permissions
                    </a>
                  </div>
                </div>
              </div>
            )}

            {/* Empty State - No Configured Servers */}
            {managedGuilds.length > 0 && configuredCount === 0 && (
              <div class="card-amina p-6 mt-6">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0">
                    <AminaPortrait size="md" expression="idle" />
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-heading font-bold text-gray-900 dark:text-white mb-2">
                      [*] Deploy Me to Your Servers
                    </h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-3">
                      You have {serverCount}{' '}
                      {serverCount === 1 ? 'server' : 'servers'} under your
                      command, but I'm not deployed yet. Click "Deploy Amina" on
                      any server card to activate the Night Guard Protocol!
                    </p>
                    <div class="text-sm text-cyber-blue">
                      Tip: I'll protect your servers with moderation, fun
                      commands, and more (•̀ᴗ•́)و
                    </div>
                  </div>
                </div>
              </div>
            )}
          </div>
        )
      }
    </main>
  </div>
</Layout>

<!-- Footer -->
<DashboardFooter />
