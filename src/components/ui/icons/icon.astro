---
/**
 * Lucide Icon Component
 * =====================
 * Wrapper for Lucide icons via Iconify for consistent styling
 */

import { Icon as AstroIcon } from 'astro-icon/components';

interface Props {
  name: string;
  class?: string;
  size?: number | string;
}

const { name, class: className = '', size = 24 } = Astro.props;
---

<AstroIcon name={`lucide:${name}`} class={className} size={size} />
