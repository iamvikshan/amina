---
/**
 * Tertiary Button - Imperial Gold
 * =================================
 * Tertiary CTA button with imperial gold outline
 * Amina Style: Achievement-focused, premium, special actions
 * Perfect for: [Your use case here]
 */

import Icon from '@components/ui/icons/icon.astro';

interface Props {
  text?: string;
  url?: string;
  icon?: 'star' | 'trophy' | 'badge' | 'crown' | 'flame' | 'zap';
  class?: string;
}

const {
  text = 'Click Me',
  url = '#',
  icon = 'star',
  class: className = '',
} = Astro.props;
---

<a
  href={url}
  class:list={[
    'inline-flex items-center justify-center gap-2',
    'px-8 py-4 text-lg',
    'font-heading font-bold',
    'text-imperial-gold bg-transparent',
    'border-2 border-imperial-gold rounded-xl',
    'transition-all duration-300',
    'hover:bg-imperial-gold/10 hover:scale-105 hover:shadow-glow-gold',
    'outline-none ring-imperial-gold/50 focus-visible:ring-4',
    className,
  ]}
>
  <Icon name={icon} size={24} />
  <span>{text}</span>
</a>
