  const botStats = await getBotStats();
  guildCount = botStats.guildCount;
  memberCount = botStats.memberCount; // Now actual member count, not estimated
} catch (error) {
  console.error(
    '[BattleStats] Failed to fetch bot stats, using fallback values'
  );
}

