# Discord OAuth & Bot
CLIENT_ID=your_discord_client_id
CLIENT_SECRET=your_discord_client_secret
BOT_TOKEN=your_discord_bot_token

# Application URLs
# BASE_URL is optional in development (defaults to http://localhost:4321)
# In production, set this to your domain: https://your-domain.com
BASE_URL=http://localhost:4321
SUPPORT_SERVER=https://discord.gg/your-invite

# Database
MONGO_CONNECTION=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Webhook Security (for bot to notify dashboard of guild changes)
WEBHOOK_SECRET="your_dashboard_webhook_secret" #generate a random string for security using bun/node crypto module (min 32 characters)

# Server Configuration
PORT=4321
NODE_ENV=development