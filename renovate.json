{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranches": ["api", "dash"],
  "platform": "github",
  "automerge": false,
  "prConcurrentLimit": 5,
  "labels": ["dependencies"],
  "reviewers": ["iamvikshan"],
  "schedule": ["before 2am"],
  "timezone": "UTC",
  "npm": {
    "enabled": true,
    "ignoreDeps": ["pretty-ms", "node-fetch"]
  },
  "github-actions": {
    "enabled": true
  },
  "dependencyDashboard": true,
  "rebaseWhen": "conflicted"
}
